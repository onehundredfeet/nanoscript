{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cmake-configure",
            "type": "shell",
            "command": "cmake -B build -DCMAKE_BUILD_TYPE=Debug -DCMAKE_EXPORT_COMPILE_COMMANDS=ON -Wno-dev",
            "options": { "cwd": "${workspaceFolder}" },
            "group": "build"
        },
        {
            "label": "cmake-build",
            "type": "shell",
            "command": "cmake --build build -j$(sysctl -n hw.logicalcpu)",
            "dependsOn": "cmake-configure",
            "options": { "cwd": "${workspaceFolder}" },
            "group": "build"
        },
        {
            "label": "nanoscript-compile",
            "type": "shell",
            "command": "./build/nanoscript examples/hello.nano output.ll",
            "dependsOn": "cmake-build",
            "options": { "cwd": "${workspaceFolder}" },
            "group": "build"
        },
        {
            "label": "build-and-compile",
            "type": "shell",
            "command": "/opt/homebrew/opt/llvm/bin/clang -g -c output.ll -o output.o && /opt/homebrew/opt/llvm/bin/clang -g output.o -o nano_binary && dsymutil nano_binary",
            "dependsOn": "nanoscript-compile",
            "dependsOrder": "sequence",
            "options": { "cwd": "${workspaceFolder}" },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
