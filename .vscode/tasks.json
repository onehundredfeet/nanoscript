{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cmake-configure",
            "type": "shell",
            "command": "cmake -B build -DCMAKE_BUILD_TYPE=Debug -DCMAKE_EXPORT_COMPILE_COMMANDS=ON -Wno-dev",
            "options": { "cwd": "${workspaceFolder}" },
            "group": "build"
        },
        {
            "label": "cmake-build",
            "type": "shell",
            "command": "cmake --build build -j$(sysctl -n hw.logicalcpu)",
            "dependsOn": "cmake-configure",
            "options": { "cwd": "${workspaceFolder}" },
            "group": "build"
        },
        {
            "label": "compile-debug-wasm",
            "type": "shell",
            "command": "${workspaceFolder}/build/nanoscript ${file} --config=debug --wasm ${workspaceFolder}/output.wasm",
            "dependsOn": "cmake-build",
            "dependsOrder": "sequence",
            "options": { "cwd": "${workspaceFolder}" },
            "group": { "kind": "build", "isDefault": true },
            "presentation": { "reveal": "silent", "panel": "shared" }
        },
        {
            "label": "compile-debug-native",
            "type": "shell",
            "command": "${workspaceFolder}/build/nanoscript ${file} --config=debug ${workspaceFolder}/nano_binary",
            "dependsOn": "cmake-build",
            "dependsOrder": "sequence",
            "options": { "cwd": "${workspaceFolder}" },
            "group": "build",
            "presentation": { "reveal": "silent", "panel": "shared" }
        }
    ]
}
