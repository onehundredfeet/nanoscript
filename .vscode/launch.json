{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug (Wasmtime / JIT)",
            "program": "/opt/homebrew/bin/wasmtime",
            "args": [
                "run",
                "-D", "debug-info",
                "${workspaceFolder}/output.wasm"
            ],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "compile-debug-wasm",
            "initCommands": [
                "settings set plugin.jit-loader.gdb.enable on"
            ]
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug (native binary)",
            "program": "${workspaceFolder}/nano_binary",
            "args": [],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "compile-debug-native"
        }
    ]
}
