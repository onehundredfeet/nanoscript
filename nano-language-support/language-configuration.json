{
    "comments": {
        "lineComment": "//"
    },
    "brackets": [
        ["{", "}"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        { "open": "{", "close": "}" },
        { "open": "(", "close": ")" }
    ],
    "surroundingPairs": [
        ["{", "}"],
        ["(", ")"]
    ],
    "indentationRules": {
        "increaseIndentPattern": "\\{\\s*$",
        "decreaseIndentPattern": "^\\s*\\}"
    },
    "onEnterRules": [
        {
            "beforeText": "\\{\\s*$",
            "action": { "indent": "indent" }
        }
    ]
}
